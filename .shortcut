function hppc()
{
	name=""
	if [[ $# != 0 ]]
	then
		for var in "$@"
		do
			word=$var
			word=$(echo "$word" | tr '[:upper:]' '[:lower:]')
			word=${word^}
			name=$name$word
		done
		header_name="$(echo $name | tr a-z A-Z)""_HPP"
		header_file="$name"".hpp"
		cpp_file="$name"".cpp"
	else
