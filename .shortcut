function ld()
{
	actual_path=$(pwd)/*
	for file in $actual_path
	do
		dir="$(dirname "${file}")"
		dirname="$(basename "${file}")"
		if [[ -d $file ]]; then
			echo -e "$CYAN ./$dirname"
		fi
	done
}

function lf()
{
	actual_path=$(pwd)/*
	for file in $actual_path
	do
		dir="$(dirname "${file}")"
		filename="$(basename "${file}")"
		if [[ -f $file ]]; then
			echo -e "$GREEN $filename"
		fi
	done
}

