function clr()
{
	if [[ "${1/-f}" != $1 ]]; then
		rm -f *.gch
		rm -f a.out
		rm -rf */.vscode
		rm -rf .vscode
		clear
	else
		echo "are you sure to clear :\n_ file.gch\n_ a.out\n_ .vscode\n?\n"
		read -r answer
		if [[ $answer == "yes" || $answer == "y" ]]; then
			rm -f *.gch
			rm -f *.swp
			# rm -f */*.gch
			# rm -f */*.swp
			rm -f a.out
			rm -f $exe_name
			rm -rf .vscode
			clear
		else
			echo -e $NOTHING
		fi
	fi
}

