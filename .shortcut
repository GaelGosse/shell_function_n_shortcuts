		grep -riIn -B 4 $1
		if [[ $(grep -riIon $1 | wc -l) == 1 ]]; then
			a="$(grep -riIon $1 | sed -r "s/\x1B\[([0-9]{1,3}(;[0-9]{1,2})?)?[mGK]//g" | awk -F ":" '{print $1":"$2}')"
			code -g $a
