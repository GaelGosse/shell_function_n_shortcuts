# with args
function refresh()
{
	if [[ "$#" > 0 ]]; then
		while true; do
			tput clear
			tput cup 0 0
			echo -e $BACK_CYAN" ----- START ----- "$RST"\n"
			rm -f *.gch
			gcc -Wall -Wextra -Werror $@ && ./a.out
			echo -e "\n"
			sleep $SLEEP
		done
	else
		echo "$RED""no args $RST"
	fi
}

