function scan()
{
	compile=0
	if [ -f "$(pwd)/Makefile" ]
	then
		compile=1
		scan-build make re
	else
		compile=1
		c_at_root=$(ls *.c | wc -l)
		c_in_sub=$(ls */*.c | wc -l)
		h_at_root=$(ls *.h | wc -l)
		h_in_sub=$(ls */*.h | wc -l)
		if [[ $c_at_root -gt 0 ]]
		then
			if [[ $h_at_root -gt 0 ]]
			then
				if [[ $c_in_sub -gt 0 ]]
				then
					if [[ $h_in_sub -gt 0 ]]
					then
						scan-build gcc -Wall -Wextra -Werror *.c */*.c *.h */*.h
					else
						scan-build gcc -Wall -Wextra -Werror *.c */*.c *.h
					fi
				else
					scan-build gcc -Wall -Wextra -Werror *.c *.h
				fi
			elif [[ $c_in_sub -gt 0 ]]
			then
				if [[ $h_in_sub -gt 0 ]]
				then
					scan-build gcc -Wall -Wextra -Werror *.c */*.c */*.h
				else
					scan-build gcc -Wall -Wextra -Werror *.c */*.c
				fi
			else
				scan-build gcc -Wall -Wextra -Werror *.c
			fi
		else
			echo $RED"nothing to compile"$RST
		fi
	fi
	if [[ $compile -eq 1 ]]
	then
		scan-view "/tmp/$(ls -lt /tmp/ | grep "scan-build" --color=never | head -1 | awk '{print $9}')"
	fi
}

